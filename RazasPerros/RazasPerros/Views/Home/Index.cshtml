@model  RazasPerros.Models.IndexViewModel
@{
	Layout = "_Layout";
}

<section class="nav">
	<h3>ABC de Razas</h3>
	<nav>
		<a href="~/">Todas</a>

		@foreach (var item in Model.LetrasIniciales.OrderBy(x=>x).Distinct())
		{
			<a href="~/Razas/@item">@item</a>
		}

		<a href="~/RazasPorPais">Listado por país</a>
	</nav>
</section>
<section class="list">
	<ul>
		@foreach (var item in Model.Razas)
		{
			<li>
				<a href="/Raza/@item.Nombre.Replace(" ","-")">
					<img src="~/imgs_perros/@(item.Id)_0.jpg">
					@item.Nombre
				</a>
			</li>
		}
	</ul>
</section>