@model IEnumerable<RazasPerros.Models.Paises>
@{
	Layout = "_Layout";
}

<section class="nav">
	<h3>Razas por país</h3>
	<nav>
		<a href="~/">Listado Alfabético de Razas</a>
	</nav>
</section>

<section class="list">
    @foreach (var pais in Model.Where(x=>x.Razas.Where(x=>x.Eliminado==0).Count()>0))
    {
        <h4>@pais.Nombre</h4>
        <ul>
            @foreach (var raza in pais.Razas.Where(x=>x.Eliminado==0))
            {
                <li>
                    <a href="~/Raza/@(raza.Nombre.Replace(" ","-"))">
                        <img src="~/imgs_perros/@(raza.Id)_0.jpg" />
                        @raza.Nombre
                    </a>
                </li>
            }
        </ul>
      
    }

</section>

